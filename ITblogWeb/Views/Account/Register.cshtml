@model Register
@{
    ViewData["Title"] = "Rejestracja";
}


<div class="bg-primary pt-1 pb-1">
    <div class="text-center" style="color:beige; font-size: 28px">Zaloguj się na swoje konto</div>
</div>

<div class="container text-center">
    <div class="row">
        <form class="col-md-6 mt-5 ms-auto me-auto" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group ml-auto mr-auto mb-3">
                <label asp-for="UserName">Nazwa użytkownika</label>
                <input asp-for="UserName" class="form-control" />
            </div>
            <div class="form-group ml-auto mr-auto mb-3">
                <label asp-for="Password">Hasło</label>
                <input asp-for="Password" class="form-control" />
            </div>
            <div class="form-group ml-auto mr-auto mb-3">
                <label asp-for="Email">E-mail</label>
                <input asp-for="Email" class="form-control" />
            </div>
            <div class="form-group ml-auto mr-auto mb-3">
                <label asp-for="FirstName">Imię</label>
                <input asp-for="FirstName" class="form-control" />
            </div>
            <div class="form-group ml-auto mr-auto mb-3">
                <label asp-for="LastName">Nazwisko</label>
                <input asp-for="LastName" class="form-control" />
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-primary btn-lg" asp-action="Register" asp-controller="Account">
                    Zarejestruj się
                </button>
            </div>
        </form>
    </div>
</div>
